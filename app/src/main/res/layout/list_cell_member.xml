<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">
    <LinearLayout
        android:id="@+id/ll_cell_member_image"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_cell_member_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/ll_cell_member_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_cell_member_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/tv_cell_member_phone"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="17701320787"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_cell_member_point"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_cell_member_phone"
                android:text="积分：20"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_cell_member_money"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/tv_cell_member_point"
                android:text="余额：20"
                android:textSize="@dimen/text_size_11" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignBottom="@+id/ll_cell_member_image"
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="1px"></LinearLayout>
</RelativeLayout>
