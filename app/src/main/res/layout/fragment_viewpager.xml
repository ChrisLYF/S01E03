<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zhixin.richard.s01e03.ui.pagertab.PagerSlidingTabStrip
        android:id="@+id/main_tabs"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/pager_sliding_tab_strip_height"
        android:background="#cc3939" />
    <android.support.v4.view.ViewPager
        android:id="@+id/main_tab_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_tabs" />
</RelativeLayout>