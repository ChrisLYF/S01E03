<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_member_detail_infomation"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:id="@+id/ll_member_detail_image"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/red">

            <ImageView
                android:id="@+id/iv_member_detail_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_member_detail_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ll_member_detail_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_member_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="北京海格"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/tv_member_detail_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="男"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_member_detail_degrade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="北京华哥"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/tv_member_detail_id"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="NO.121313131231"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_member_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="正常"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:id="@+id/tv_member_detail_point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:text="积分：20"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_member_detail_consumemoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="120元"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="累计消费"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rl_member_detail_consume1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_member_detail_infomation"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/ib_member_detail_call"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/green" />

        <ImageButton
            android:id="@+id/ib_member_detail_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/gray" />

        <ImageButton
            android:id="@+id/ib_member_detail_consume"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/yellow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rl_member_detail_consume2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/rl_member_detail_consume1"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/ib_member_detail_exchange"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/green" />

        <ImageButton
            android:id="@+id/ib_member_detail_charge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/gray" />

        <ImageButton
            android:id="@+id/ib_member_detail_history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/yellow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_member_detail_birtyday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_member_detail_consume2"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="生日："
                android:textAlignment="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="生日：" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_member_detail_delete"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ib_member_detail_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

    </LinearLayout>
</RelativeLayout>